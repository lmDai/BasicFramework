<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activity.MainActivity">

    <cn.yznu.common.widget.WrapContentViewPager
        android:id="@+id/top_pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.flyco.tablayout.SlidingTabLayout
        android:id="@+id/main_tab"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_gravity="bottom"
        android:background="@color/color_white"
        android:clickable="false"
        app:tl_indicator_color="@color/color_orange"
        app:tl_tab_space_equal="true"
        app:tl_textAllCaps="true"
        app:tl_textSelectColor="@color/color_text_normal"
        app:tl_textUnselectColor="@color/color_text_hint"
        app:tl_textsize="@dimen/sp_18" />

    <cn.yznu.common.widget.WrapContentViewPager
        android:id="@+id/bottom_pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>